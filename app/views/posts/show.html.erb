<div class= "" style="background-color:#FFF8F8;" >
   <div class="post_index">  
      <%= image_tag("female.jpg", :class=> "nav-avatar", :style => "width:70px;height:70px" ) %>
      <%= link_to @post.title, @post , :class =>"post_title" %><br><br>
 
    <p><%= @post.content %></p><br>
    <div class="by"> <%= format_date(@post.user.created_at) %>, <%= @post.user.email if @post.user.present? %></div>
     <%= link_to 'Edit ', edit_post_path(@post), :class=>"pull-right" %><%= link_to ' Back', posts_path, :class=>"pull-right" %><br>
     
    <hr>
    <div class="new_comment">
      <%= render "posts/comments_form" %>
    </div>
    
    <div class="comment">
      <%= render 'posts/comments' %>
    </div> 
   </div> 
</div>
